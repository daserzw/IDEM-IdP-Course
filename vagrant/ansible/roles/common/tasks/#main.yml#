- name: Configure /etc/hosts
  template: src=roles/common/templates/hosts dest=/etc/hosts

- name: Configure /etc/environment
  template: src=roles/common/templates/environment dest=/etc/environment

- name: Add GARR apt sources
  template: src=roles/common/templates/sources.list dest=/etc/apt/sources.list

- name: Update apt cache
  apt: update_cache=yes
  tags: online
#  apt: update_cache=yes cache_valid_time=36000

- name: Install apt packages
  apt: name={{ item }} state=present
  with_items:
    - vim
    - ntp
    - apache2
    - openjdk-7-jdk
    - libjstl1.1-java
    - tomcat7 
    - libapache2-mod-shib2
  tags: online

- name: Install CA Certificate
  copy: src={{ certs }}/cacert.pem dest=/etc/ssl/certs/cacert.pem

- name: Install CA Key
  copy: src={{ certs }}/cakey.pem dest=/etc/ssl/private mode=0600

- name: Install IdP Certificate
  copy: src={{ certs }}/idp.example.org-cert.pem dest=/etc/ssl/certs/idp.example.org-cert.pem

- name: Install IdP Key
  copy: src={{ certs }}/idp.example.org-key.pem dest=/etc/ssl/private/idp.example.org-key.pem group=ssl-cert mode=0640

- name: Install SP Certificate
  copy: src={{ certs }}/sp.example.org-cert.pem dest=/etc/ssl/certs/sp.example.org-cert.pem

- name: Install SP Key
  copy: src={{ certs }}/sp.example.org-key.pem dest=/etc/ssl/private/sp.example.org-key.pem group=ssl-cert mode=0640
